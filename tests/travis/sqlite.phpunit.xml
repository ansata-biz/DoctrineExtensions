<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="./../bootstrap.php"
>
    <testsuites>

        <testsuite name="Mapping Extension">
            <directory suffix="Test.php">./../Mapping/</directory>
        </testsuite>

        <testsuite name="Translatable Extension">
            <directory suffix="Test.php">./../Translatable/</directory>
        </testsuite>

        <testsuite name="Timestampable Extension">
            <directory suffix="Test.php">./tests/Timestampable/</directory>
        </testsuite>

        <testsuite name="References Extension">
            <directory suffix="Test.php">./tests/References/</directory>
        </testsuite>

        <testsuite name="SoftDeleteable Extension">
            <directory suffix="Test.php">./tests/SoftDeleteable/</directory>
        </testsuite>

        <testsuite name="Blameable Extension">
            <directory suffix="Test.php">./tests/Blameable/</directory>
        </testsuite>

        <testsuite name="ReferenceIntegrity Extension">
            <directory suffix="Test.php">./tests/ReferenceIntegrity/</directory>
        </testsuite>

        <testsuite name="Sortable Extension">
            <directory suffix="Test.php">./tests/Sortable/</directory>
        </testsuite>

    </testsuites>

</phpunit>
